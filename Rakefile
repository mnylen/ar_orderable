    gemspec.homepage = "http://github.com/mnylen/ar_orderable"
    gemspec.authors = ["Mikko NylÃ©n"]
    gemspec.add_dependency("activerecord", "~> 2.3.5")
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end